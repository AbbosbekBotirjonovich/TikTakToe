<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_bg"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/turnTitleTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Turn X : Player"
        android:fontFamily="@font/blaka_regular"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TableLayout
        android:id="@+id/btnTableLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/turnTitleTv"
        app:layout_constraintDimensionRatio="1:1">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/firstBtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/MyCustomButton"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/secondBtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/MyCustomButton"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/thirdBtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/MyCustomButton"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/fourthBtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/MyCustomButton"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/fifthBtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/MyCustomButton"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/sexBtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/MyCustomButton"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/sevenBtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/MyCustomButton"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/eightBtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/MyCustomButton"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/nineBtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/MyCustomButton"/>
        </TableRow>

    </TableLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/btnTableLayout">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:id="@+id/xWonTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="X Won"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:fontFamily="@font/blaka_regular"/>
            <TextView
                android:id="@+id/oWonTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="O Won"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:fontFamily="@font/blaka_regular"/>
            <TextView
                android:id="@+id/drawTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="Draw"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:fontFamily="@font/blaka_regular"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:id="@+id/xCountTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:fontFamily="@font/rocksalt_regular"/>
            <TextView
                android:id="@+id/oCountTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="0"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:fontFamily="@font/rocksalt_regular"/>
            <TextView
                android:id="@+id/drawCountTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:fontFamily="@font/rocksalt_regular"/>
        </TableRow>
    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>