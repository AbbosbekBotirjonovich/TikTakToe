<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TikTakToeKotlin" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="MyCustomButton" parent="ThemeOverlay.Material3.Button">
        
        <item name="android:textSize">28sp</item>
        <item name="android:background">@drawable/bg_rounded_btn</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:fontFamily">@font/rocksalt_regular</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="RoundedDialog" parent="ThemeOverlay.Material3.Dialog.Alert">
        <item name="dialogCornerRadius">16dp</item>
    </style>
</resources>